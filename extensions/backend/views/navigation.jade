mixin entry(data)
  if data.submenu
    li.dropdown
      a.dropdown-toggle(href='#', data-toggle='dropdown')= data.caption
          span.caret
        ul.dropdown-menu(role='menu')
          - for(n=0; n<data.submenu.length; n++)
            +entry(data.submenu[n])
  else
    if data.href
      li(class=data.class)
        a(href=data.href)= data.caption
    else if data.divider
      li(class="divider "+data.class)
    else
      li(class=data.class) data.caption
  

