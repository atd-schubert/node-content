{
  "type": ["object", "string"],
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://node-content.atd-schubert.com/schemas/user#",
  "description": "An user object or userId for node-content.",
  "pattern": "^[0-0a-fA-F]$",
  "required": ["username", "userId"],
  "additionalProperties": false,
  "properties": {
    "userId": {
      "type": "string",
      "id": "http://node-content.atd-schubert.com/schemas/user/id#",
      "pattern": "^[0-0a-fA-F]$",
      "description": "The internal userID of an user"
    },
    "username": {
      "type": "string",
      "id": "http://node-content.atd-schubert.com/schemas/user/username#",
      "pattern": "^[a-zA-Z\\.\\-]*$",
      "description": "The username of an user"
    },
    "forename": {
      "type": "string",
      "id": "http://node-content.atd-schubert.com/schemas/user/forename#",
      "pattern": "^[A-Z][a-z]*$",
      "description": "The forename of an user"
    },
    "surname": {
      "type": "string",
      "id": "http://node-content.atd-schubert.com/schemas/user/surname#",
      "pattern": "^[a-zA-Z\\.\\-\\ ]*$",
      "description": "The surname of an user"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "The email address of an user"
    }
  }
}